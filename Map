hauteur_map = 10
largeur_map = 10
def create_map(hauteur_map,largeur_map):
    map = []
    for i in range(hauteur_map):
        if i == 0 or i == (hauteur_map - 1) :
            map.append([1 for j in range(largeur_map)])
        else:
            for j in range(largeur_map-1):
                if j == 0 or j == largeur_map - 1:
                    map[i].append(1)
                else :
                    map[i].append(0)

    return map
   
for ligne in create_map(hauteur_map,largeur_map) :
    print(ligne)
